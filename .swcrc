{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "baseUrl": ".",
    "paths": { "~/*": ["./src/*"] },
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "target": "esnext",
    "transform": {
      "decoratorMetadata": true
    }
  },
  "module": {
    "type": "es6",
    "strict": true
  }
}
