{
  "name": "template-node",
  "description": "A template for esm Node.js projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": ["node", "typescript", "esm", "template"],
  "engines": {
    "node": ">=23.6"
  },
  "imports": {
    "#*": {
      "dev": "./src/*.ts",
      "default": "./build/*.js"
    }
  },
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc -p tsconfig.build.json",
    "dev": "node -C dev --watch src/main.ts",
    "start": "node build/main.js",
    "test": "node -C dev --test --test-reporter spec src/**/*.test.ts",
    "tidy-check": "biome check --no-errors-on-unmatched",
    "tidy-fix": "yarn tidy:ci --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.13.14",
    "husky": "^9.1.7",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@mkvlrn/result": "npm:@jsr/mkvlrn__result@^0.1.2"
  }
}
