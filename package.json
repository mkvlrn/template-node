{
  "name": "template-node",
  "description": "A template for esm Node.js projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": [
    "node",
    "typescript",
    "esm",
    "template"
  ],
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "vite build",
    "dev": "tsx --watch src/main.ts",
    "start": "node build/main.js",
    "test": "vitest",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "npm run biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.0.3",
    "husky": "^9.1.7",
    "rollup-plugin-node-externals": "^8.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mkvlrn/result": "^1.1.4"
  }
}
