{
  "name": "template-node",
  "description": "A template for esm Node.js projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": [
    "node",
    "typescript",
    "esm",
    "template"
  ],
  "engines": {
    "node": ">=23.6"
  },
  "imports": {
    "#*": {
      "dev": "./src/*.ts",
      "default": "./build/*.js"
    }
  },
  "scripts": {
    "build": "node scripts/build.ts",
    "dev": "node -C dev --watch src/main.ts",
    "start": "node build/main.js",
    "test": "node -C dev --test src/**/*.test.ts",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "yarn biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "https://pkg.pr.new/biomejs/biome/@biomejs/biome@241a440",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.13.17",
    "husky": "^9.1.7",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@mkvlrn/result": "^1.1.0"
  }
}
