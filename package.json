{
  "name": "template-node",
  "description": "A template for esm Node.js projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": [
    "node",
    "typescript",
    "esm",
    "template"
  ],
  "engines": {
    "node": "24"
  },
  "imports": {
    "#/*": "./src/*.ts"
  },
  "scripts": {
    "dev": "node --watch src/main.ts",
    "start": "node src/main.ts",
    "test": "vitest",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@mkvlrn/config": "^3.0.8",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4",
    "typescript": "6.0.0-beta",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@mkvlrn/result": "^5.0.6"
  }
}
