{
  "name": "template-node",
  "description": "A template for esm Node.js projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": [
    "node",
    "typescript",
    "esm",
    "template"
  ],
  "engines": {
    "node": ">=23.8"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "tsx --watch src/main.ts",
    "start": "node build/main.js",
    "test": "tsx --test",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "yarn biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "https://pkg.pr.new/biomejs/biome/@biomejs/biome@2d699e3",
    "@commitlint/cli": "^19.8.0",
    "@mkvlrn/config": "^2.0.3",
    "@types/node": "^22.14.0",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.15",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@mkvlrn/result": "^1.1.0"
  }
}
