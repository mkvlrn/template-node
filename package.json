{
  "name": "template-node",
  "description": "A template for esm Node.js projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": [
    "node",
    "typescript",
    "esm",
    "template"
  ],
  "engines": {
    "node": "24"
  },
  "imports": {
    "#*": {
      "dev": "./src/*.ts",
      "default": "./build/*.js"
    }
  },
  "scripts": {
    "build": "rm -rf build && tsc --project tsconfig.build.json --listEmittedFiles",
    "dev": "tsx -C dev --watch src/main.ts",
    "start": "node build/main.js",
    "test": "vitest",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@mkvlrn/config": "^3.0.4",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@mkvlrn/result": "^5.0.4"
  }
}
