{
  "name": "template-node",
  "description": "A template for esm Node.js projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": ["node", "typescript", "esm", "template"],
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsc-alias -f -p tsconfig.build.json",
    "dev": "node --import=tsx --watch src/main.ts",
    "start": "node build/main.js",
    "test": "vitest",
    "test:integration": "vitest --config test/integration/vitest.config.ts",
    "test:e2e": "vitest --config test/e2e/vitest.config.ts",
    "tidy": "biome check --fix --no-errors-on-unmatched --verbose",
    "typecheck": "tsc --noEmit && echo 'tsc passed'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.0.2",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.2"
  }
}
