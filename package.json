{
  "name": "template-node",
  "description": "A template for Node.js projects",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-node"
  },
  "keywords": ["node", "esm", "template"],
  "imports": {
    "#*": {
      "development": "./src/*",
      "default": "./dist/*"
    }
  },
  "scripts": {
    "build": "node --import @swc-node/register/esm-register scripts/build.ts",
    "dev": "node --import @swc-node/register/esm-register --watch src/main.ts",
    "start": "node dist/main.js",
    "test": "vitest run --reporter verbose",
    "test:cov": "npm run test -- --coverage",
    "lint": "eslint --fix src/**/*.ts test/**/*.ts",
    "format": "prettier --write src test",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.4",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
